        <activity android:name=".ReadingExerciseActivity" />
        <activity android:name=".ReadingExerciseMenuActivity" />
        <activity android:name=".TopicActivity" />
        <activity android:name=".TopicMenuActivity" />
        <activity android:name=".LessonActivity" />
        <activity android:name=".RomaKanaMatchActivity" />
        <activity android:name=".RomaKanaSpeedActivity" />
        <activity android:name=".MenuActivity"></activity>
        <activity android:name=".FlashcardActivity" />
        <activity android:name=".QuizActivity" />
        <activity android:name=".ReferenceSheetActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>