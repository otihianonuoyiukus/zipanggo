<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/romakana_match_rl_b_frontcard"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:clickable="false"
        android:lines="1"
        android:text="@string/character_placeholder"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:autoSizeMaxTextSize="40sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:backgroundTint="@color/dirty_white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/romakana_match_rl_b_backcard"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/darker_red"
        android:clickable="false"
        android:paddingVertical="35dp"
        android:text="@string/character_placeholder"
        android:textColor="@color/darker_red"
        android:textSize="30sp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:rippleColor="@android:color/transparent" />

</RelativeLayout>