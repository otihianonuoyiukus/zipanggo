<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/menu_account_tv_profileicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_menu_account_profile"/>

    <TextView
        android:id="@+id/menu_account_tv_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/menu_account_tv_profileicon"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="aaaaaaaaa"/>

    <TextView
        android:id="@+id/menu_account_tv_profiledesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_account_tv_profilename"
        android:layout_toRightOf="@id/menu_account_tv_profileicon"
        android:textSize="14sp"
        android:text="aaaaaaaaa" />

</RelativeLayout>