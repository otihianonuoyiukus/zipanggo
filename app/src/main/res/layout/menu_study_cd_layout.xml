        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RadioGroup
            android:id="@+id/menu_study_rl_rg_systemgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/menu_study_cd_rb_hiragana">

            <RadioButton
                android:id="@+id/menu_study_cd_rb_hiragana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/darker_red"
                android:text="@string/menu_study_cd_choice_system_hiragana" />

            <RadioButton
                android:id="@+id/menu_study_cd_rb_katakana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/darker_red"
