                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/darker_red"
                    android:text="@string/menu_study_cd_choice_sound_basic"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/menu_study_cd_cb_dakuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_study_cd_cb_basic"
                    android:buttonTint="@color/darker_red"
                    android:text="@string/menu_study_cd_choice_sound_voiced_dakuon" />

                <CheckBox
                    android:id="@+id/menu_study_cd_cb_handakuon"
