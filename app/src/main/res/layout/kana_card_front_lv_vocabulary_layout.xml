<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/kana_card_front_lv_tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:paddingStart="5dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/kana_card_front_lv_tv_jpword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/kana_card_front_lv_tv_index"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/kana_card_front_lv_tv_index" />

    <TextView
        android:id="@+id/kana_card_front_lv_tv_romword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/kana_card_front_lv_tv_jpword"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/kana_card_front_lv_tv_jpword" />

    <TextView
        android:id="@+id/kana_card_front_lv_tv_filword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/kana_card_front_lv_tv_romword"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/kana_card_front_lv_tv_romword" />

</RelativeLayout>